#include <stdio.h>
#include <stdlib.h>

int main () {
  
 	//Codigo feito em portugues
	//Leia um numero inteiro e verifique se e par ou impar
	
	int numqlqr;
		printf("Digite seu numero:  ");
		scanf("%d", &numqlqr);
		printf("Seu numero: %d \n", numqlqr);
		
	if(numqlqr/2==0) {
		printf("par");
	}
		else{
			printf("impar");
		}
	
		return 0;
}
